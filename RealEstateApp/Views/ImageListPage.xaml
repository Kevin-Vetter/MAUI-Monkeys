<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="RealEstateApp.Views.ImageListPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:RealEstateApp.Models"
    xmlns:vm="clr-namespace:RealEstateApp.ViewModels"
    Title="ImageListPage"
    x:DataType="vm:ImageListPageViewModel"
    Shell.PresentationMode="ModalAnimated">
    <CarouselView ItemsSource="{Binding Images}" Position="{Binding Position}">
        <CarouselView.ItemTemplate>
            <DataTemplate>
                <Image Source="{Binding .}" />
            </DataTemplate>
        </CarouselView.ItemTemplate>
    </CarouselView>
</ContentPage>