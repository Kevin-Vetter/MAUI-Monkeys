<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppProg1.Views.MonkeyDetails"    
             xmlns:model="clr-namespace:AppProg1.Models"
             xmlns:viewModel="clr-namespace:AppProg1.ViewModels"
             Title="MonkeyDetails"
             x:DataType="viewModel:MonkeyDetailsViewModel">
    <VerticalStackLayout>
        <Label Text="{Binding Monkey.Name}"/>
        <Label Text="{Binding Monkey.Location}"/>
        <Label Text="{Binding Monkey.Details}"/>
        <Label Text="{Binding Monkey.ImageUrl}"/>
    </VerticalStackLayout>
</ContentPage>